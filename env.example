# Stock Analytics Environment Configuration
# Default configuration for local development

# MongoDB Configuration
# Default: Connect to local MongoDB instance (accessible via Compass)
MONGODB_URI=mongodb://host.docker.internal:27017/stock-analytics

# Alternative: Use containerized MongoDB (uncomment mongo service in docker-compose.yml first)
# MONGODB_URI=mongodb://mongo:27017/stock-analytics

# Kafka/Redpanda Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_BOOTSTRAP_SERVERS_DOCKER=redpanda:9092

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_HOST_DOCKER=redis
REDIS_PORT_DOCKER=6379

# Mail Configuration
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_HOST_DOCKER=mailhog
MAIL_PORT_DOCKER=1025

# Service Ports
API_GATEWAY_PORT=8080
MARKET_DATA_PORT=8081
ANALYTICS_PORT=8082
PORTFOLIO_PORT=8083
ALERTS_PORT=8084
UI_PORT=5173

# Redpanda Console & Kafka UI
REDPANDA_CONSOLE_PORT=8085
KAFKA_UI_PORT=8086

# MailHog Web Interface
MAILHOG_WEB_PORT=8025

# MongoDB Compass (local)
MONGODB_COMPASS_PORT=27017

# JWT Configuration (Mock for local development)
JWT_SECRET=your-super-secret-jwt-key-for-local-development-only
JWT_EXPIRATION=86400000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Metrics & Monitoring
METRICS_ENABLED=true
PROMETHEUS_ENABLED=true
